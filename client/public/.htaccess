# React Router konfiguration för undermapp /deltagarportalen/
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /deltagarportalen/
    
    # Tillåt direkt åtkomst till befintliga filer och mappar
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
    
    # Omdirigera allt annat till index.html för React Router
    RewriteRule ^ index.html [QSA,L]
</IfModule>

# Komprimera filer
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache statiska filer
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month"
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
</IfModule>

# MIME-typer
AddType text/css .css
AddType application/javascript .js
AddType image/svg+xml .svg
